<% include _header %>
<h2 style="text-align: center;">Sign up</h2>
<div style="width: 50%; margin-left: auto; margin-right: auto; text-align: center;">
<form action="/signup" method="post" style="text-align: left;">
    <h4>Email</h4>
    <input name="username" type="email" title="Contact's email (format: xxx@xxx.xxx)"
           pattern="[a-zA-Z0-9!#$%&amp;'*+\/=?^_`{|}~.-]+@[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*"
           class="form-control" placeholder="Email" required autofocus>
    <h4>Password</h4>
    <input name="password" type="password" class="form-control" placeholder="Password" required>
    <h4>Nickname</h4>
    <input name="nickname" type="text" class="form-control" placeholder="Nickname" required>
    <h2></h2>
    <input type="submit" value="Sign up" class="btn btn-primary btn-block">
</form>
</div>
<br>
<br>
<% include _footer %>